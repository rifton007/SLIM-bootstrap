<!doctype html>
{% set _title = (block('title') is defined)? block('title') : null %}
<html lang="{{ _locale}}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="./favicon.ico">
    <title>{{ company.name }}{% if _title is not empty %} | {{ _title|raw }}{% endif %}</title>
    <meta name="author" content="InnovaWEB">
    <link rel="stylesheet" href="/scss/bootstrap.css">
    <link rel="stylesheet" href="/vendor/fontawesome/fa-svg-with-js.min.css">
    <link rel="stylesheet" href="/css/common.css">
    {#start_favicon#}
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#9f00a7">
    <meta name="theme-color" content="#ffffff">
    {#end_favicon#}
</head>
<body>
{% include '/Elements/navbar.twig' %}
<div class="container main-container">
    {% if flash.success or flash.error %}
        <div class="alert alert-{{ flash.success ? 'success': 'danger' }} alert-dismissible fade show">
            <i class="fa fa-{{ flash.success ? 'check': 'exclamation' }}"></i>&ensp;
            {{ flash.success ? flash.success: flash.error }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}

    {% block content %}
    {% endblock %}
</div>
{% include '/Elements/footer.twig' %}
<script defer src="/vendor/jquery/jquery-3.3.1.slim.min.js"></script>
<script defer src="/vendor/fontawesome/fontawesome-all.min.js"></script>
<script defer src="/vendor/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>